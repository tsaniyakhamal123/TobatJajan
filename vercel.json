{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/tobatjajan-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/server.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "frontend/tobatjajan-frontend/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/tobatjajan-frontend/index.html"
    }
  ]
}